
<h2>Player 1: <%= @game.player_1_name %> </h2>

<h2><%= @game.player_1_name %> chose <%= @game.player_1_move %>!</h2>

<h2><%= @game.player_2_name %>  chose <%= @game.player_2_move %>!</h2>

<h1><%= @game.round_result %></h1>

<form action="/new_round" method="post">
  <input type="submit" name="new_round" value="Play again!">
  <input type="submit" name="new_round" value="New Players">
</form>

<table>
  <tr>
    <th><%= @game.player_1_name %></th>
    <th>Draws</th>
    <th><%= @game.player_2_name %></th>
  </tr>
  <tr>
    <th><%= @game.display_score[@game.player_1_name] %></th>
    <th><%= @game.display_score['Draws'] %></th>
    <th><%= @game.display_score[@game.player_2_name] %></th>
  </tr>
</table>
